doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Подсчитай кварплату
    style.
      @import url('//fonts.googleapis.com/css?family=PT+Sans:400,700&subset=latin,cyrillic');
      * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }
      body{
        font-family: 'PT Sans';
      }
      .Payment {
        margin: 0 auto;
        width: 600px;
      }
      .Payment-item + .Payment-item {
        margin-top: 35px;
      }
      .Payment--attention {
        background: #FDFF99;
        padding: 3px 13px;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
        font-size: 22px;
      }
      input[type="number"] {
        font-size: 14px;
        border-radius: 1px;
        border: 1px solid #ccc;
        padding: 5px 7px;
        width: 145px;
        text-align: center;
        -webkit-box-shadow: inset 0 0 2px #ccc;
        -moz-box-shadow: inset 0 0 2px #ccc;
        box-shadow: inset 0 0 2px #ccc;
      }
      input[type="number"]:focus{
        outline: 0;
        border-color: #939393;
      }
  body
    .Payment
      // Группа жкх
      .Payment-group
        h2 ЖКХ
        .Payment-item
          h3 Свет
          .Payment-form
            | (
            input.Payment-light--current(type='number', placeholder='Текущий месяц', onkeyup='Flatbeat.updateTotal()')
            |         -
            input.Payment-light--last(type='number', placeholder='Прошлый месяц', onkeyup='Flatbeat.updateTotal()')
            | )
            |         *
            span.Payment-light--tariff 0
            |  ₽
            |         =
            span.Payment-light--rub
            |  ₽
        .Payment-item
          h3 Холодная вода
          .Payment-form
            | (
            input.Payment-coldWater--current(type='number', placeholder='Текущий месяц', onkeyup='Flatbeat.updateTotal()')
            |         -
            input.Payment-coldWater--last(type='number', placeholder='Прошлый месяц', onkeyup='Flatbeat.updateTotal()')
            | )
            |         *
            span.Payment-coldWater--tariff 0
            |  ₽
            |         =
            span.Payment-coldWater--rub
            |  ₽
        .Payment-item
          h3 Горячая вода
          .Payment-form
            | (
            input.Payment-hotWater--current(type='number', placeholder='Текущий месяц', onkeyup='Flatbeat.updateTotal()')
            |         -
            input.Payment-hotWater--last(type='number', placeholder='Прошлый месяц', onkeyup='Flatbeat.updateTotal()')
            | )
            |         *
            span.Payment-hotWater--tariff 0
            |  ₽
            |         =
            span.Payment-hotWater--rub
            |  ₽
        .Payment-item
          h3 Водоотвод
          .Payment-form
            span.Payment-waterfall 0
            |         *
            span.Payment-waterfall--tariff 0
            |  ₽
            |         =
            span.Payment-waterfall--rub 0
            |  ₽
        .Payment-item
          h3 Все жкх (Горячая и холодная вода, свет, водоотвод)
          span.Payment--attention
            span.Payment-utilities--rub 0
            |  ₽
        .Payment-item
          h3 Комиссия при оплате через банк (если есть)
          .Payment-form
            input.Payment-commission(type='number', placeholder='В % от жкх', onkeyup='Flatbeat.updateTotal()')
            |  % это
            span.Payment-commission--rub 0
            |  ₽
      // Группа кварплата
      .Payment-group
        h2 Аренда квартиры
        .Payment-item
          .Payment-form
            input.Payment-rent(type='number', onkeyup='Flatbeat.updateTotal()')
            |  ₽
        .Payment-item
          h3 Сколько человек снимают квартиру?
          input.Payment-rentPersons(type='number', value='1', onkeyup='Flatbeat.updateTotal()')
      .Payment-group
        h2 Итого
        .Payment-item
          h3 Общая сумма
          span.Payment--attention
            span.Payment-summaryValue 0
            |  ₽
        .Payment-item
          h3 Сумма с человека
          span.Payment--attention
            span.Payment-summaryPerPerson 0
            |  ₽
    script(src='flatbeat.js')
